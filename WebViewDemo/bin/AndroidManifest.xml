<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.com.alex"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="cn.com.alex.manager.WebApplication"
        android:allowBackup="true"
        android:configChanges="orientation|keyboardHidden"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar" >
        <activity
            android:name="cn.com.alex.ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="cn.com.alex.ui.WebViewActivity"
            android:label="@string/title_activity_web_view"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="cn.com.alex.ui.WebJsActivity"
            android:label="@string/title_activity_web_js" >
        </activity>
        <activity
            android:name="cn.com.alex.ui.TopicActivity"
            android:label="@string/title_activity_topic" >
        </activity>
        <activity
            android:name="cn.com.alex.ui.NewWebViewActivity"
            android:label="@string/title_activity_new_web_view" >
        </activity>
    </application>

</manifest>
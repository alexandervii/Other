<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ffffff"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_common_adapter_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="this is the title"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/id_common_adapter_item_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_common_adapter_item_title"
            android:layout_marginTop="5dp"
            android:text="this is the description"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/id_common_adapter_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_common_adapter_item_desc"
            android:layout_marginTop="5dp"
            android:text="2015-04-20 00:48"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/id_common_adapter_item_check"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/id_common_adapter_item_phone"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="#3BC724"
            android:layout_gravity="center_vertical|right"
            android:text="10086" />
    </LinearLayout>
</LinearLayout>